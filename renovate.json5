{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "updateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true,
      "postUpdateOptions": ["yarnDedupeHighest"]
    },
    {
      "packagePatterns": ["^@types/"],
      "matchUpdateTypes": ["patch"],
      "enabled": false,
    },
    {
      "packagePatterns": ["^node$"],
      "matchUpdateTypes": ["patch"],
      "enabled": false,
    }
  ]
}
