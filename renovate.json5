{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "labels": ["dependencies"],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true,
      "postUpdateOptions": ["yarnDedupeHighest"]
    },
    {
      "matchPackagePatterns": ["^@types/", "^node$"],
      "matchUpdateTypes": ["patch"],
      "enabled": false
    }
  ]
}
