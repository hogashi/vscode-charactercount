{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":automergeMinor"
  ],
  "labels": ["dependencies"],
  "packageRules": [
    {
      "matchDatasources": ["npm"],
      "stabilityDays": 7,
      "internalChecksFilter": "strict",
    },
    {
      "matchPackagePatterns": ["^@types/", "^node$"],
      "matchUpdateTypes": ["patch"],
      "enabled": false,
    },
    // automerge eslint config when green even if major
    {
      "matchPackagePatterns": ["^eslint-config-standard-with-typescript$"],
      "matchUpdateTypes": ["major"],
      "automerge": true,
    },
  ]
}
